##############################################################################
#
#  Lees Edwards + Brazovski 3d smoke test
#
##############################################################################

N_cycles 400

##############################################################################
#
#  System
#
##############################################################################

size 64_64_64
grid 2_2_2

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.0833333333
ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy brazovskii

A -0.0005
B 0.0005
K -0.0006
C 0.00076

noise 1.0
phi0 0.0
phi_initialisation    spinodal
mobility 0.250

fd_advection_scheme_order 5
fd_gradient_calculation 3d_27pt_fluid

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 400
config_at_end no

###############################################################################
#
#  Lees-Edwards planes
#
###############################################################################

N_LE_plane 2
LE_plane_vel 0.0064
LE_init_profile 0

###############################################################################
#
#  Miscellaneous
###############################################################################

random_seed -7361237
#random_seed 8361235
